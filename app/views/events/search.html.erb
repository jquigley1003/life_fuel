<% provide(:title, "Search Events") %>
<div class="jumbotron div_bg_light">
<h1>What Will Motivate You?</h1>

<%= form_tag events_path, :method => 'get' do %>
    <%= label_tag(:event, "Event Mood:") %>
    <%= text_field_tag :event, params[:event] %><br /><br />    
    <%= label_tag(:location, "Location:") %>
    <%= text_field_tag :location, params[:location] %><br /><br />
    <%= label_tag(:time, "Time:") %>
    <%= text_field_tag :time, params[:time] %><br /><br />
    <%= label_tag(:category, "Category:") %>
    <%= text_field_tag :category, params[:category] %><br /><br />
    <%= submit_tag "Search" %>
<% end %>
</div>

