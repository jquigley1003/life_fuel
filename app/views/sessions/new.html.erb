<% provide(:title, "Sign In") %>
<div class="jumbotron div_bg_light">
<h1>Life!Fuel</h1>
<div>
<%= form_for(:session, url: sessions_path, class: "form-group") do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <br />

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <br />

  <div>
    <%= f.submit 'Sign In' %>
  </div>

  <div>
    <p>Sign In To Start Your Search or <a class="make-bold" href="/signup">Sign Up Now!</a></p>
  </div>

<% end %>
</div>
</div>