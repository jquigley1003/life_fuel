<% provide(:title, "Sign In") %>
<div class="jumbotron div_bg_light">
<h1>Life!Fuel</h1>
<div>
<%= form_for(:session, url: sessions_path) do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <br />

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br />

  <div>
    <%= f.submit 'Sign In' %>
  </div>

  <div>
    <p>Need Access? <a href="/signup">Sign Up Now!</a></p>
  </div>

<% end %>
</div>
</div>